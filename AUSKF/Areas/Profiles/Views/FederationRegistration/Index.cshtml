@model AUSKF.Areas.Profiles.Models.MyProfileViewModel

@{
    ViewBag.Title = "Index";
}

<h4>Please verify your personal information:</h4>

<div class="form-group">
    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Model.FirstName
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.MiddleName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Model.MiddleName 
    </div>
</div>

<div class="form-group">
